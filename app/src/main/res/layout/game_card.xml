<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#9C1E1E"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C5C1C1"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/white_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/white_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/white_card_move_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/black_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/black_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/black_card_move_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>